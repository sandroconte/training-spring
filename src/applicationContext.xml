<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

		
	<context:property-placeholder location="classpath:sport.properties"/>

	<bean id="myFortune" class="training.demo.services.implementations.HappyFortune"></bean>
	
	<bean id="myCoach" class="training.demo.models.TrackCoach">
		<constructor-arg ref="myFortune" />
	</bean>
	
	<bean id="myCricketCoach" class="training.demo.models.CricketCoach">
		<property name="fortune" ref="myFortune"></property>
		<property name="email" value="${foo.email}"></property>
		<property name="team" value="${foo.team}"></property>
	</bean>
</beans>
